<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent" android:background="@drawable/white"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal">

	<com.facebook.android.LoginButton
		android:id="@+id/login" android:src="@drawable/login_button"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_margin="30dp"  />
	<TextView android:id="@+id/txt" android:text="@string/hello"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="@drawable/black"
		/>
</LinearLayout>
